{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"moduleResolution": "node",
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"incremental":true,
		"lib": [
			"es6",
			"es2020.string",
			"DOM"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode",
	]
}